{
  "name": "patrol-management-system-be",
  "version": "1.0.0",
  "description": "Backend for Patrol Management System",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/bin/www.ts",
    "dev:debug": "tsx watch --inspect src/bin/www.ts",
    "build": "npx tsc && tsc-alias",
    "start": "node dist/bin/www.js",
    "start:prod": "NODE_ENV=production node dist/bin/www.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.6.2",
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "keywords": [
    "patrol",
    "management",
    "system",
    "backend"
  ],
  "author": "@agus-darmawan",
  "contributors": [
    "@agus-darmawan"
  ],
  "license": "Proprietary License"
}
